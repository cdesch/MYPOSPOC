<UserControl x:Class="MYPOSPOC.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MYPOSPOC"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="LayoutRoot" Background="White" DataContext="{Binding CurrentSettings}">
        <TextBox HorizontalAlignment="Left" Height="23" Margin="22,48,0,0" TextWrapping="Wrap" Name="FirstName" VerticalAlignment="Top" Width="120" Text="{Binding FirstName}"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="22,98,0,0" TextWrapping="Wrap" Name="LastName" VerticalAlignment="Top" Width="120" Text="{Binding LastName}"/>



    </Grid>
</UserControl>
